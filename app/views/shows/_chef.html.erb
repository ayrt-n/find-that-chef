<div class="w-full grow [&:not(:last-child)]:border-b md:flex">
  <div class="flex items-center md:flex-col md:w-40 md:min-h-48 md:mr-2">
    <div class="rounded-full size-10 bg-neutral-400 mb-2 mr-2 md:mr-0 md:size-20">
    </div>
    <span class="mr-1 md:mr-0">
      <%= chef.first_name %>
    </span>
    <span>
      <%= chef.last_name %>
    </span>
  </div>
  <div class="flex-grow py-4 space-y-6 md:px-6">
    <% if chef.restaurants.empty? %>
      <div class="font-semibold text-xl text-neutral-400">
        No restaurants reported
      </div>
    <% else %>
      <%= render partial: "shows/restaurant", collection: chef.restaurants %>
    <% end %>
  </div>
</div>